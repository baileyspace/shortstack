<%= content_for :column2 do%>
  <% if !@profiles.blank?%>
    <h1 class="h1_first">Contributors</h1>
    Sort by: 
    <ul id="submenu">
      <li><a href="?sort_by=name">Name</a></li>
      <li><a href="?sort_by=this_week">Contributions This Week</a></li>
      <li><a href="?sort_by=this_month">Contributions This Month</a></li>
      <li><a href="?sort_by=this_year">Contributions This Year</a></li>
      <li><a href="?sort_by=all_time">Contributions All Time</a></li>
    </ul> 
    <% @profiles.each do |profile| -%>
    <div class="profile_box">
      <div class="profile_image">
        <%= link_to picture_for(profile.user), profile %>
      </div>
      <div class="profile_name">
        <%= link_to profile.name, profile %>
      </div>
      <div class="profile_description">
        <%= pluralize(profile.contributions.count, "contribution") %>
      </div>
    </div>
    <% end -%>
  <% end %>
<% end %>
