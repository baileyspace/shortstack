<% form_for [item, Relationship.new], :html => {:id =>"people-relationship-form", :style => "display:none;" } do |f| -%>
<fieldset>
  <legend>Add a Person Relationship</legend>
  <a href="#" onClick="$('#people-relationship-form').hide();" id="hide">Hide Form</a>
  <p><%= select("relationship", "person_id", Person.all.collect {|p| [ p.name, p.id ] })%> <%= select("relationship", "relation_type", RelationType.where("type_name = 'Person'").all.collect {|p| [ p.name, p.name ] })%> this product.</p>
  </p>  
  <p>
    <%= f.submit 'Create' %>
  </p>
</fieldset>  
<% end %>
