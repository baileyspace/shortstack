<div id="col1">
    <%= render :partial => 'links/links', :locals => {:item => @person}%>  
</div>
<div id="col2">
  <div id="col2_internal">
    <h1 class="h1_first"><%= @person.name %></h1>
    <%= render :partial => 'notes/form', :locals => {:item => @person}%>
    <%= render :partial => 'links/form', :locals => {:item => @person}%>
