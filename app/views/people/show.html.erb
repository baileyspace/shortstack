    <%= link_to 'Edit this Person', edit_person_path(@person) %><br>
    <a href="#" id="hide_link" onClick="$('#link-form').show();">Add a Link</a><br>    
    <a href="#" id="hide_link" onClick="$('#note-form').show();">Add a Note</a>        
    
	</div>
  
</div>



