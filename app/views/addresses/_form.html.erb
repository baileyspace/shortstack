<%= form_for [item, Address.new], :html => {:id =>"address-form", :style => "display:none;" } do |f| -%>
<fieldset>
  <legend>Add an Address</legend>
  <a href="#" onClick="$('#address-form').hide();" id="hide">Hide Form</a>
  <p><%= f.label :address, "Address:" %><%=f.text_field :address %> </p> 
  <p><%= f.label :city, "City:" %><%=f.text_field :city %> </p>   
  <p><%= f.label :state, "State:" %><%=f.text_field :state %> </p> 
  <p><%= f.label :zipcode, "Zipcode:" %><%=f.text_field :zipcode %> </p>   
  <p><%= f.label :country, "Country:" %><%=f.text_field :country %> </p>     
    <%= f.submit 'Create' %>
  </p>
</fieldset>  
<% end %>
