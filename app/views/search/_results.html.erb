<% if @results -%>
  <% if @results.hits.size > 0 -%>
    <% @results.results.each do |result| %>
      <div class="search_result">
        <span class="search_result_type"><%= result.org_type.name %>:</span>
        <span class="search_result_link"><%= link_to result.name, result %></span>
      </div>
    <% end %>
  <% else %>
    <p>There were no results for (<%= params[:search] %>).</p>
  <% end -%>
<% else %>
  <p>Please enter a search term</p>
<% end -%>
